/* Progress Quest Config Editor Styles - Dark Theme */

body {
  font-family: Arial, sans-serif;
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  background: #1a1a1a;
  color: #e0e0e0;
  transition: all 0.3s;
}

/* Header */
.header {
  background: linear-gradient(135deg, #2c3e50, #34495e);
  color: white;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #3498db;
}

/* Statistics */
.stat-card {
  background: #2a2a2a;
  color: #e0e0e0;
  border: 1px solid #404040;
  border-radius: 8px;
  padding: 20px;
}

.stat-card h3 {
  margin: 0 0 15px 0;
  color: #3498db;
  border-bottom: 2px solid #3498db;
  padding-bottom: 5px;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
  border-bottom: 1px solid #404040;
}

.stat-item:last-child {
  border-bottom: none;
}

/* Editor sections */
.editor-section {
  background: #2a2a2a;
  color: #e0e0e0;
  border: 1px solid #404040;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
}

.current-stat-card {
  background: #2a2a2a;
  color: #e0e0e0;
  border: 1px solid #404040;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
}

.current-stat-card h3 {
  margin: 0 0 15px 0;
  color: #e74c3c;
  border-bottom: 2px solid #e74c3c;
  padding-bottom: 5px;
}

/* Editor layout */
.editor-container {
  display: flex;
  gap: 20px;
  align-items: flex-start;
}

.current-stats {
  min-width: 300px;
  flex-shrink: 0;
}

.action-buttons {
  min-width: 200px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 0 20px;
}

.editor-content {
  flex: 1;
}

/* Action buttons */
.action-btn {
  padding: 12px 20px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s;
  font-weight: 600;
  text-align: center;
}

.save-btn {
  background: linear-gradient(135deg, #27ae60, #229954);
  color: white;
}

.save-btn:hover {
  background: linear-gradient(135deg, #58d68d, #27ae60);
  transform: translateY(-1px);
}

.action-btn.export-btn {
  background: linear-gradient(135deg, #27ae60, #27ae60);
  color: white;
}

.action-btn.export-btn:hover {
  background: linear-gradient(135deg, #58d68d, #58d68d);
  transform: translateY(-1px);
}

/* Section tabs */
.section-tabs {
  display: block;
  margin-bottom: 20px;
  border-bottom: none;
  overflow: visible;
  white-space: normal;
}

/* Category organization styles */
.category-header {
  background: linear-gradient(135deg, #8e44ad, #9b59b6);
  color: white;
  padding: 12px 20px;
  margin: 4px 0;
  cursor: pointer;
  font-weight: bold;
  border-radius: 6px;
  transition: all 0.3s;
  border: 1px solid #9b59b6;
}

.category-header:hover {
  background: linear-gradient(135deg, #9b59b6, #a569bd);
  transform: translateY(-1px);
}

.category-header.active {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  border-color: #2ecc71;
}

.category-tabs {
  display: none;
  flex-wrap: wrap;
  margin-bottom: 15px;
  padding-left: 20px;
  background: rgba(52, 73, 94, 0.1);
  border-radius: 4px;
  padding: 10px 20px;
}

.category-tabs.active {
  display: flex;
}

.category-tabs .tab {
  margin: 3px 6px;
  font-size: 13px;
  padding: 8px 16px;
  background: #34495e;
  color: #ecf0f1;
  border: 1px solid #5d6d7e;
  border-radius: 4px;
  transition: all 0.3s;
}

.category-tabs .tab:hover {
  background: #4a5f7a;
  transform: translateY(-1px);
}

.category-tabs .tab.active {
  background: linear-gradient(135deg, #f39c12, #e67e22);
  border-color: #e67e22;
  color: white;
  font-weight: bold;
}

.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
}

/* Item lists */
.item-list {
  max-height: 600px;
  overflow-y: auto;
  border: 1px solid #404040;
  border-radius: 6px;
  background: #1e1e1e;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 15px;
  border-bottom: 1px solid #333;
  transition: background-color 0.2s;
}

.item:hover {
  background: #2c3e50;
}

.item:last-child {
  border-bottom: none;
}

.item-text {
  flex: 1;
  font-family: "Courier New", monospace;
  color: #ecf0f1;
}

.item-actions {
  display: flex;
  gap: 8px;
}

/* Buttons */
.btn {
  padding: 6px 12px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 12px;
  transition: all 0.3s;
  font-weight: 500;
}

.btn-edit {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
}

.btn-edit:hover {
  background: linear-gradient(135deg, #5dade2, #3498db);
  transform: translateY(-1px);
}

.btn-delete {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
}

.btn-delete:hover {
  background: linear-gradient(135deg, #ec7063, #e74c3c);
  transform: translateY(-1px);
}

.btn-add {
  background: linear-gradient(135deg, #27ae60, #229954);
  color: white;
  padding: 10px 20px;
  margin-bottom: 15px;
  font-size: 14px;
}

.btn-add:hover {
  background: linear-gradient(135deg, #58d68d, #27ae60);
  transform: translateY(-1px);
}

/* Forms */
.add-form {
  display: none;
  background: #34495e;
  padding: 20px;
  border-radius: 6px;
  margin-bottom: 15px;
  border: 1px solid #5d6d7e;
}

.add-form input {
  width: 70%;
  padding: 10px;
  margin-right: 15px;
  border: 1px solid #5d6d7e;
  border-radius: 4px;
  background: #2c3e50;
  color: #ecf0f1;
  font-size: 14px;
}

.add-form input:focus {
  outline: none;
  border-color: #3498db;
}

/* Export section */
.export-section {
  margin-top: 30px;
  text-align: center;
}

.export-btn {
  background: linear-gradient(135deg, #27ae60, #27ae60);
  color: white;
  padding: 15px 30px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  margin: 0 15px;
  transition: all 0.3s;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.export-btn:hover {
  background: linear-gradient(135deg, #27ae60, #27ae60);
  transform: translateY(-2px);
}

/* Level breakdown */
.level-breakdown {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(50px, 1fr));
  gap: 4px;
  margin-top: 15px;
  max-height: 250px;
  overflow-y: auto;
}

.level-cell {
  padding: 6px 4px;
  text-align: center;
  font-size: 11px;
  border-radius: 4px;
  min-height: 35px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1.2;
  font-weight: 600;
  transition: transform 0.2s;
}

.level-cell:hover {
  transform: scale(1.05);
}

.level-cell small {
  font-size: 9px;
  font-weight: bold;
  margin-top: 2px;
}

.level-has-items {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
}

.level-empty {
  background: #34495e;
  color: #95a5a6;
  border: 1px solid #5d6d7e;
}

/* Scrollbar styling */
.item-list::-webkit-scrollbar,
.level-breakdown::-webkit-scrollbar {
  width: 12px;
}

.item-list::-webkit-scrollbar-track,
.level-breakdown::-webkit-scrollbar-track {
  background: #2c3e50;
  border-radius: 6px;
}

.item-list::-webkit-scrollbar-thumb,
.level-breakdown::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #8e44ad, #9b59b6);
  border-radius: 6px;
  border: 2px solid #2c3e50;
}

.item-list::-webkit-scrollbar-thumb:hover,
.level-breakdown::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #9b59b6, #a569bd);
}

/* Remove dark mode toggle since we're always dark */
.dark-mode-toggle {
  display: none;
}
